<%= semantic_form_for @registration do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :input_html => { :size => 16 } %>
    <%= f.input :gender, :as => :radio, :collection => [:Male, :Female] %>
    <%= f.input :category, :as => :select, :collection => Contact.pluck(:name) %>
    <%= f.input :subjects, :as => :check_boxes, :collection => [:ruby, :cucumber] %>
    <%= f.input :address, :as => :text,       :input_html => { :class => 'autogrow', :rows => 10, :cols => 20, :maxlength => 500  } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
